<vlayout vflex="1" >
	<hlayout hflex="1" vflex="min">
		<div hflex="1" vflex="min">
			<html content="@load(vm.selectedThread.title)" sclass="thread_title"/>
			<image visible="@load(vm.selectedThread.popular)"
			 src="data:image/png;base64," />
		</div>
		<image sclass="button" 
		 src="data:image/png;base64," />
	</hlayout>
	<vlayout vflex="1" children="@load(vm.contentList)">
		<template name="children" var="content">
			<groupbox mold="3d" onOpen='@command("openContent")'>
				<caption label="@load(content.author)" zclass="post_from" />
				<label value="@load(content.date)" />
				<separator />
				<html content="@load(content.content)" />
			</groupbox>					
		</template>
	</vlayout>			
</vlayout>