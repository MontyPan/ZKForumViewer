<!-- ================ -->

<style>
/* ### override zk style ### */
.z-label {
	font-size: 13px;
}

.z-caption-l {
	display: none;
}

.z-html {
	font-family: arial,sans-serif;
	font-size: 13px;
	display: inline; /* for iPhone font size issue */
	/* TODO find cross-browser css :'( */
	white-space: pre-wrap; 
	word-wrap:break-word;
	word-break:break-all;
}

tbody.z-listbox-empty-body td{
    font-size: 20px;
}

pre {
	/* TODO find cross-browser css :'( */
	white-space: pre-wrap;
	word-wrap:break-word;
	word-break:break-all;
}

.button {
	width: 22px;
	height: 19px;
	padding: 5px;
	border: 1px solid #ccc;
	${t:borderRadius("5px")}
	cursor: pointer;
}

.button:hover{
	border-color: #AEAEAE;
	${t:boxShadow("inset 1px 1px 1px #0CBCFF, inset -1px -1px 1px #0CBCFF")};
}

.button:focus{
	border-color: #0CBCFF;
	${t:boxShadow("inset 1px 1px 1px #0CBCFF, inset -1px -1px 1px #0CBCFF")};
}

.back_button {
	cursor: pointer;
}

.collapse_button {
	width: 28px;
	height: 25px;
	padding: 2px;
	border: 1px solid #ccc;
	${t:borderRadius("5px")}
	cursor: pointer;
}

.textCenter {
	text-align: center;
}

.thread_title {
	font-size: 15px;
	font-weight: bold;
}

.content_header {
	margin: 5px;
}

.content_author {
	float: left;
	font-size: 15px;
	color: #093;
}	

.right {
	float: right;
}

.left {
	float: left;
}

.product_btn {
	float: left;
	width: 130px;
	height: 32px;
	margin-left: 50px;
}

.autoSkip {
	display: block;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.disable {
	opacity: 0.3;
}
</style>

<style if="${zk.iphone != null}">
.autoSkip {
	white-space: normal; /* override for iPhone rendering bug */
}

/* #### hide on phone device #### */
@media screen and (max-width: 640px) {
	.z-borderlayout-icon {
		display:none;
	}
}
</style>

<style if="${zk.mobile == null}">
/* make desktop browser looks like tablet */
.z-west-header, .z-center-header, .z-east-header, .z-north-header, .z-south-header {
	background: -webkit-linear-gradient(top, rgba(255, 255, 255, 1) 0%, rgba(237, 237, 237, 1) 100%);
	background:    -moz-linear-gradient(top, rgba(255, 255, 255, 1) 0%, rgba(237, 237, 237, 1) 100%);
	background:     -ms-linear-gradient(top, rgba(255, 255, 255, 1) 0%, rgba(237, 237, 237, 1) 100%);
	background:      -o-linear-gradient(top, rgba(255, 255, 255, 1) 0%, rgba(237, 237, 237, 1) 100%);
	background:	        linear-gradient(top, rgba(255, 255, 255, 1) 0%, rgba(237, 237, 237, 1) 100%);
	line-height: 32px;
	
	/* for fxck IE8+ */
	filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(
		src='${c:encodeThemeURL('~./zul/img/layout/borderlayout-hm.png')}',
		sizingMethod='scale'
	);
}
</style>

<borderlayout apply="org.zkoss.bind.BindComposer" onClientInfo='@command("clientInfoChanged", event=event)'
 viewModel='@id("vm") @init("org.zkoss.demo.tablet.vm.ThreadViewModel", mode="mock")'>
	<west border="none" collapsible="true" autoscroll="true" xmlns:ca="client/attribute"
	 visible="@load(not vm.deviceMode.phone or (vm.deviceMode.phone and not vm.threadMode))"
	 size='@load(vm.deviceMode.phone ? "100%" : "30%")' >
		<caption>
			<include src="threadHead.zul" />
		</caption>
		<div>
			<!-- #### Thread.zul ####-->
			<listbox id="threadList" visible="@load(vm.westMode)"  ca:data-scrollable="false"
			 model="@load(vm.threadList)" emptyMessage="Is Empty!"
			 selectedIndex='@load(vm.threadListEmpty ? vm.emptyIndex : vm.selectedThreadIndex) @save(vm.selectedThreadIndex)' >
				<template name="model" var="thread">
					<listitem>
						<listcell>
							<hlayout valign="middle" hflex="1">
								<checkbox />
								<div hflex="1">
									<label value="@load(thread.author)" sclass="thread_title" />
									(<label value='@load(thread.post)' />)
									<image 
									 src="data:image/png;base64," />
									<separator visible="@load(not vm.deviceMode.phone)"/>
									<html content="@load(thread.title)" sclass="thread_title autoSkip" />
									<separator visible="@load(not vm.deviceMode.phone)"/>
									Last post by <label value="@load(thread.lastPoster)" />
									<label value="@load(thread.category)" style="@load(thread.category) @converter(vm.styleConverter)" />
								</div>
								<image width="27px" height="25px"
								 src='@load(thread.hot ? "img/star.png" : "img/starEmpty.png")' />
								<div width="2px" />
							</hlayout>
						</listcell>
					</listitem>
				</template>
			</listbox>
			<!-- #### category.zul #### -->
			<vlayout spacing="0" visible="@load(not vm.westMode)">
				<div style="background-color:#ccc;padding:0 0 0 10px;font-size:14px;">
					<label style="line-height:32px;font-weight:bold;">Labels</label>
				</div>
				<listbox ca:data-scrollable="false"
				 model="@load(vm.categoryList)" selectedIndex="@bind(vm.selectedCategoryIndex)">
					<template name="model" var="category">
						<listitem>
							<listcell>
								<label value="${category}" style="padding:0 0 0 10px;line-height:32px;font-size:14px;font-weight:bold" />
							</listcell>
						</listitem>
					</template>
				</listbox>
				<div style="background-color:#ccc;padding:0 0 0 10px;font-size:14px;">
					<label style="line-height:32px;font-weight:bold;">Folders</label>
				</div>
				<listbox ca:data-scrollable="false"
				 model="@load(vm.folderList)" selectedIndex="@bind(vm.selectedFolderIndex)">
					<template name="model" var="folder">
						<listitem>
							<listcell>
								<label value="${folder}" style="padding:0 0 0 10px;line-height:32px;font-size:14px;font-weight:bold" />
							</listcell>
						</listitem>
					</template>
				</listbox>
			</vlayout>
		</div>
	</west>
	
	<center border="none" id="contentPanel" autoscroll="true">
		<caption>
			<hlayout sclass="right">
				<image sclass="button" visible="@load(not vm.deviceMode.phone)"
				 tooltiptext="configuration"
				 onClick='@command("showSetting")'
				 src="data:image/png;base64," />			
			</hlayout>
			<image sclass="back_button left" visible="@load(vm.deviceMode.phone)"
			 onClick='@command("backToCategory")' 
			 src="data:image/png;base64," />			
		</caption>
		<include vflex='1' hflex='1' src="@load(vm.centerUrl)"/>
	</center>
	
	<south border="none">
		<caption>
			<hlayout sclass="left" style="padding:0 0 0 10px" spacing="15px">
				<image sclass="button" tooltiptext="source code"
				 onClick='Executions.sendRedirect("https://github.com/MontyPan/ZKForumViewer")'
				 src="data:image/png;base64," />
				<image sclass="button" tooltiptext="ZK Demo"
				 onClick='Executions.sendRedirect("http://www.zkoss.org/zkdemo/")'
				 src="data:image/png;base64,"/>
			</hlayout>
			<hlayout sclass="right" style="padding:0 20px 0 0" spacing="15px"
			 visible="@load(vm.centerMode and (not vm.deviceMode.phone or vm.threadMode)))">
				<image sclass='@load(vm.threadStart ? "button disable" : "button")' 
				 onClick='@command(vm.threadStart ? "" : "prevThread")' 
				 src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABQAAAAUCAYAAACNiR0NAAAAUklEQVQ4y2P4//8/AzUxw6iB9DXQIrD3PwhTxUCYYVQxEM2w/RQZSIphBA0k1TBSDaRKLO8n1VBibCXJUGKTzX6qJht0Q6mZ9fZTnA5Hiy+CGACQH5jke2R0BAAAAABJRU5ErkJggg==" />
				<image sclass='@load(vm.threadEnd ? "button disable" : "button")' 
				 onClick='@command(vm.threadEnd ? "" : "nextThread")'
				 src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABQAAAAUCAYAAACNiR0NAAAATklEQVQ4y2P4//8/AzUxw6iBtDXQIrD3PwhT3UBSDCWk4D+phhJjK0mGEhs2RBtKdGBT1UA0wygzkBTDSE02/6mZsKmXDkkxbLS0oQ4GABpVmyQ8nT5cAAAAAElFTkSuQmCC" />
			 </hlayout>	  
		</caption>
	</south>
</borderlayout>
</zk>